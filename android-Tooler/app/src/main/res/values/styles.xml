<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
	
	<style name="ToolerTheme" parent="Theme.AppCompat">
	    <item name="colorAccent">@color/clrAccent</item>
		<item name="colorPrimary">@color/clrPrimary</item>
		<item name="colorPrimaryDark">?colorPrimary</item>
		<item name="colorButtonNormal">@color/clrAccent</item>
		<item name="colorControlHighlight">@color/clrAccent</item>
		<item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
		<item name="alertDialogTheme">@style/ToolerTheme.AlertDialog</item>
		<item name="android:navigationBarColor">@color/clrWindow</item>
		<item name="android:windowBackground">@color/clrWindow</item>
		<item name="android:colorBackgroundCacheHint">@null</item>
		<item name="android:displayOptions">showCustom</item>
		<item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
		<item name="uiColorIcon">@color/clrIcon</item>
		<item name="uiColorDanger">@color/clrDanger</item>
		<item name="uiColorWarning">@color/clrWarning</item>
		<item name="uiColorInfo">@color/clrInfo</item>
		<item name="uiColorSuccess">@color/clrSuccess</item>
    </style>
	
	<style name="ToolerTheme.AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/clrPrimary</item>
    </style>
	
	<style name="ToolerTheme.NoActionBar" parent="ToolerTheme">
		<item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
	</style>

	<style name="ToolerTheme.Preferences" parent="ToolerTheme">
		<item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">false</item>
		<item name="android:divider">@null</item>
    </style>  

	<style name="ToolerTheme.Intro" parent="ToolerTheme">
		<item name="colorPrimaryDark">?colorPrimaryDark</item>
		<item name="android:navigationBarColor">?colorPrimary</item>
		<item name="android:windowBackground">@drawable/layer_background_intro</item>
		<item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

	<style name="ToolerTheme.TabLayout" parent="Widget.Design.TabLayout">
		<item name="tabIndicatorColor">?attr/colorAccent</item>
		<item name="tabIndicatorHeight">1dp</item>
		<item name="tabPaddingStart">?android:attr/listPreferredItemPaddingStart</item>
		<item name="tabPaddingEnd">?android:attr/listPreferredItemPaddingEnd</item>
		<item name="tabBackground">?attr/selectableItemBackground</item>
		<item name="tabTextAppearance">@style/ToolerTheme.TabLayout.TextAppearance</item>
		<item name="tabSelectedTextColor">?android:textColorPrimary</item>
	</style>

	<style name="ToolerTheme.TabLayout.TextAppearance" parent="TextAppearance.Design.Tab">
		<item name="android:textColor">?android:textColorSecondary</item>
		<item name="textAllCaps">false</item>
	</style>

	<style name="Preference_TextAppearanceMaterialBody2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
	
</resources>
